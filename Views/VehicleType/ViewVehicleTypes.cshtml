@model IEnumerable<AutoparkWeb.Models.Entity.VehicleType>
@{
    ViewData["Title"] = "Vehicle Types";
}
<h2>@ViewData["Title"]</h2>
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Vehicle" asp-action="ViewVehicles">Vehicles</a></li>
        <li class="breadcrumb-item active" aria-current="page">VehicleTypes</li>
        <li class="breadcrumb-item"><a asp-controller="SpareParts" asp-action="ViewSpareParts">SpareParts</a></li>
        <li class="breadcrumb-item"><a href="#">Orders</a></li>
    </ol>
</nav>
<div>
    <p>
        <a class="btn btn-outline-info" role="button" asp-controller="VehicleType" asp-action="CreateType">Add type</a>
    </p>
</div>

<blockquote class="blockquote text-center">
    <table class="table table-bordered table-hover table-sm">
        <caption>List of types of vehicle</caption>
        <thead class="thead-dark">
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Type Name</th>
                <th scope="col">Tax Coefficient</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {

                <tr>
                    <td>@item.Id</td>
                    <td>
                        <a asp-controller="VehicleType" asp-action="GetTypeInfo" asp-route-id="@item.Id">@item.TypeName</a>
                    </td>
                    <td>@item.TaxCoefficient</td>
                    <td>
                        <a asp-controller="VehicleType" asp-action="EditType" asp-route-id="@item.Id">Update</a>    |   
                        <a asp-controller="VehicleType" asp-action="DeleteType" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</blockquote>