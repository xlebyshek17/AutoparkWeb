@model AutoparkWeb.Models.Entity.Vehicle
@inject AutoparkWeb.Models.Repositories.IRepository<VehicleType> type

@{
    ViewData["Title"] = "New Vehicle";
}
<h2>@ViewData["Title"]</h2>

<form asp-action="CreateVehicle" asp-controller="Vehicle">
    <div>
        <div class="form-group">
            <label asp-for="Type"></label>
            <div>
                <select name="Type" class="form-control">
                    @foreach (var t in type.GetList())
                    {
                        <option value="@t.Id">@t.TypeName</option>
                    }
                </select>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ModelName"></label>
            <input type="text" asp-for="ModelName" class="form-control mr-sm-2" />
        </div>
        <div class="form-group">
            <label asp-for="RegistrationNumber"></label>
            <input type="text" asp-for="RegistrationNumber" class="form-control form-control-sm" />
        </div>
        <div class="form-group">
            <label asp-for="Weight"></label>
            <input asp-for="Weight" class="form-control form-control-sm" />
        </div>
        <div class="form-group">
            <label asp-for="ManufactureYear"></label>
            <input type="number" asp-for="ManufactureYear" class="form-control form-control-sm" />
        </div>
        <div class="form-group">
            <label asp-for="Mileage"></label>
            <input asp-for="Mileage" class="form-control form-control-sm" />
        </div>
        <div class="form-group">
            <label asp-for="TankVolume"></label>
            <input asp-for="TankVolume" class="form-control form-control-sm" />
        </div>
        <div class="form-group">
            <label asp-for="Color"></label>
            <input type="text" asp-for="Color" class="form-control form-control-sm" />
        </div>
        <div class="form-group">
            <label asp-for="Engine"></label>
            <div>
                <select name="Engine" class="form-control">
                    <option>Diesel</option>
                    <option>Electrical</option>
                    <option>Gasoline</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-outline-secondary" />
        </div>
    </div>
</form>

<div>
    <a class="btn btn-outline-info" role="button" asp-controller="Vehicle" asp-action="ViewVehicles">Back to list of vehicles</a>
</div>
