@model AutoparkWeb.Models.Entity.Vehicle
@inject AutoparkWeb.Models.Repositories.IRepository<VehicleType> type

@{
    ViewData["Title"] = "Edit vehicle";
}
<h2>@ViewData["Title"]</h2>

<form asp-action="EditVehicle" asp-controller="Vehicle">
    <div>
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="Type"></label>
            <div>
                <select name="Type" asp-for="Type">
                    @foreach (var t in type.GetList())
                    {
                        <option value="@t.Id">@t.TypeName</option>
                    }
                </select>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ModelName"></label>
            <input type="text" asp-for="ModelName" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="RegistrationNumber"></label>
            <input type="text" asp-for="RegistrationNumber" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Weight"></label>
            <input asp-for="Weight" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="ManufactureYear"></label>
            <input type="number" asp-for="ManufactureYear" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Mileage"></label>
            <input asp-for="Mileage" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="TankVolume"></label>
            <input asp-for="TankVolume" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Color"></label>
            <input type="text" asp-for="Color" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Engine"></label>
            <input type="text" asp-for="Engine" class="form-control" />
        </div>
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-outline-info" />
        </div>
    </div>
</form>

<div>
    <a class="btn btn-outline-info" role="button" asp-controller="Vehicle" asp-action="ViewVehicles">Back to list of vehicles</a>
</div>
