@model AutoparkWeb.Models.Entity.Vehicle
@inject AutoparkWeb.Models.Repositories.IRepository<VehicleType> type
@{
    ViewData["Title"] = "Vehicle Details";
}
<h2>@ViewData["Title"]</h2>
<div>
    <p> </p>
</div>
<form asp-action="GetVehicleInfo" asp-controller="Vehicle">
    <table class="table table-bordered">
        <caption>Vehicle Details</caption>
        <thead class="thead-dark">
            <tr>
                <th scope="col"><p class="text-center">Type</p></th>
                <th scope="col"><p class="text-center">Model</p></th>
                <th scope="col"><p class="text-center">Number</p></th>
                <th scope="col"><p class="text-center">Weight</p></th>
                <th scope="col"><p class="text-center">Year</p></th>
                <th scope="col"><p class="text-center">Mileage</p></th>
                <th scope="col"><p class="text-center">TankVolume</p></th>
                <th scope="col"><p class="text-center">Color</p></th>
                <th scope="col"><p class="text-center">Engine</p></th>
                <th scope="col"><p class="text-center">Tax per month</p></th>
                <th scope="col"><p class="text-center">Mileage on a full tank</p></th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@type.GetList().Where(t => t.Id ==  Model.Type).FirstOrDefault().TypeName</td>
                <td>@Model.ModelName</td>
                <td>@Model.RegistrationNumber</td>
                <td>@Model.Weight kg</td>
                <td>@Model.ManufactureYear</td>
                <td>@Model.Mileage km</td>
                <td>@Model.TankVolume</td>
                <td>@Model.Color</td>
                <td>@Model.Engine</td>
                <td>@Model.GetCalcTaxPerMonth().ToString("0.00") $</td>
                <td>@Model.GetMileageWithFullTank() km</td>

            </tr>
        </tbody>
    </table>
</form>

<div>
    <p><a class="btn btn-outline-info" role="button" asp-controller="Vehicle" asp-action="EditVehicle" asp-route-id="@Model.Id">Update</a></p>
    <p><a class="btn btn-outline-info" role="button" asp-controller="Vehicle" asp-action="DeleteVehicle" asp-route-id="@Model.Id">Delete</a></p>
</div>

<div>
    <a class="btn btn-outline-info" role="button" asp-controller="Vehicle" asp-action="ViewVehicles">Back to list of vehicles</a>
</div>
